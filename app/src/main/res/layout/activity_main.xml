<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFA07A"
    tools:context="com.anangmufid.android.diagnosisserviks.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="15dp"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/logo" />

        <Button
            android:id="@+id/buttonDiagnosis"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/orangebutton"
            android:text="Diagnosis"
            android:textColor="@android:color/white"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonPenyakitKanker"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:layout_below="@id/buttonDiagnosis"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-45dp"
            android:background="@drawable/orangebutton"
            android:text="Penyakit KAnker "
            android:textColor="@android:color/white"
            android:textSize="25dp" />
        <Button
            android:id="@+id/buttonExit"
            android:background="@drawable/exit"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="80dp"
            android:layout_below="@id/buttonPenyakitKanker" />
        <Button
            android:id="@+id/buttonInfo"
            android:background="@drawable/info"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/buttonPenyakitKanker"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="80dp"/>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
