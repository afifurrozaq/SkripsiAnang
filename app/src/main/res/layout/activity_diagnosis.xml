                android:layout_height="wrap_content"
                android:text="Sakit pada panggul"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merasa kelelahan terus menerus"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sering buang air kecil"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nyeri pada saat buang air besar"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nyeri pada payudara"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muncul benjolan pada vagina"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <CheckBox
                android:id="@+id/gejala24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sakit pada saat berhubungan seksual"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/buttonProsesDiagnosis"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/orangebutton"
                android:text="Diagnosis"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
